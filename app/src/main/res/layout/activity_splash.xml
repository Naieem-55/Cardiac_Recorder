<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="#B0E0E6"
    android:id="@+id/splashActivity"
    tools:context=".splash">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="800px"
        android:layout_height="900px"
        android:src="@drawable/splash"
        >

    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text1"
        android:textSize="40dp"
        android:textStyle="italic"
        android:textColor="#05081B"
        android:textAlignment="center"
        android:text="Cardiac Recorder"
        android:layout_marginTop="80dp"
        >

    </TextView>

    <TextView
        android:id="@+id/text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Your Health Guide"
        android:textAlignment="center"
        android:textColor="#02BDAC"
        android:textSize="30dp"
        android:textStyle="italic">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="55dp">
        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Devloped by : "
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textColor="#957EBF"
            android:textSize="17dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Naieem , Wasi ."
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            android:textColor="#031A1C"
            android:textSize="17dp"
            android:textStyle="bold"/>
    </LinearLayout>



</LinearLayout>

